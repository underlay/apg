{
	"include": ["src/*"],
	"exclude": ["test/*"],
	"compilerOptions": {
		"strict": true,
		"module": "ESNext",
		"target": "ES2020",
		"outDir": "lib",
		"sourceMap": false,
		"declaration": true,
		"alwaysStrict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"isolatedModules": true
	}
}
